<%- include('../layouts/admin-header.ejs') %>

<div class="dash-content">
    
    <h2 class="mt-5 h1">All Price Filters</h2>
    
    <a href="/admin/price-filters/add-price-filter"><button class="btn">Add a new price filter</button></a>
    <div class="table-responsive-sm">
        <% if (count > 0) { %>

        <table id="example" class="table data-table align-middle" style="width:100%">
            <% success.forEach(function(msg){ %>
                <div class="alert alert-success" role="alert">
                    <%= msg %>
                </div>
              <% }) %>
              <% error.forEach(function(err){ %>
                <div class="alert alert-danger" role="alert">
                    <%= err %>
                </div>
              <% }) %>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Action</th>
                    
            </tr>
        </thead>
        <tbody>
            <% priceFilter.forEach(function(filter){ %>
                <tr>
                    <td><%= filter.title %></td>
                    <td>
                        <a href="/admin/price-filters/edit-price-filter/<%= filter._id %>"><i class="fa fa-pen pe-5"></i></a>
                        <a class="confirmDeletion" href="/admin/price-filters/delete-price-filter/<%= filter._id %>"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                <% }); %>
        </tbody>
        
    </table>
    <% } else { %>
        <br><br>
        <h3 class="text-center">No any Price Filter</h3>
    <% } %>
    </div>
</div>
</section>

<%- include('../layouts/admin-footer.ejs') %>
